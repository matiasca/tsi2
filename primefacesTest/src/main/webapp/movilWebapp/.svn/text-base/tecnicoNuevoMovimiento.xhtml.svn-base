<?xml version="1.0" encoding="ISO-8859-1" ?>
<f:view xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui"
	xmlns:pm="http://primefaces.org/mobile" contentType="text/html"
	renderKitId="PRIMEFACES_MOBILE">

	<pm:page title="ACCSA">
		<pm:header title="ACCSA">
			<f:facet name="left">
				<p:button value="Back" icon="back" href="#main?reverse=true" />
			</f:facet>
		</pm:header>
		<pm:content>
			<h:form>



				<h:outputLabel for="descripcion" value="Descripcion *"
					required="true" style="font-weight:bold" />

				<p:inputTextarea id="descripcion"
					value="#{movimientoBean.descripcion}" styleClass="Name"
					rows="6" cols="75" required="true"
					requiredMessage="Debe ingresar una descripción." />




				<h:outputLabel value="Fecha inicio *" required="true"
					style="font-weight:bold" />


				<!--<p:inputMask value="#{fechaInicio}" 
					mask="99/99/9999 99:99" required="true"
					requiredMessage="Debe ingresar la fecha de inicio." /> -->


				<p:inputText value="#{movimientoBean.fechaInicio}"
					required="true" type="date" requiredMessage="Debe ingresar una fecha de inicio.">
					<f:convertDateTime pattern="dd/MM/yyyy" type="both"
						timeZone="America/Montevideo" />
				</p:inputText>


				<h:outputLabel value="Hora inicio *" 
					style="font-weight:bold" />

				<p:inputText value="#{movimientoBean.horaInicio}"
					required="true" requiredMessage="Debe ingresar una hora de inicio." type="text">
				</p:inputText>
 
				<h:outputLabel value="Fecha fin * " style="font-weight:bold" />


				<p:inputText value="#{movimientoBean.fechaFin}" required="true" requiredMessage="Debe ingresar una fecha de fin.">
					<f:convertDateTime pattern="dd/MM/yyyy"
						timeZone="America/Montevideo" />
				</p:inputText>


				<h:outputLabel value="Hora fin *"   style="font-weight:bold" />


					<p:inputText value="#{movimientoBean.horaFin}"
					required="true"  requiredMessage="Debe ingresar una hora de fin." type="text">
				</p:inputText>


				<!--			 <p:inputMask value="#{movimientoBean.fechaFin}"
					mask="99/99/9999 99:99" required="true"
					requiredMessage="Debe ingresar la fecha de fin" /> -->
				<!-- <p:inputText  value= "#{movimientoBean.fechaInicio}" type= "date" />-->
				<p:separator></p:separator>


				<p:messages id="messages" autoUpdate="true" closable="true"  />
				
				<!-- REDIRIGIR A verListaTarea -->
				<p:commandButton value="Crear"
					actionListener="#{movimientoBean.crearMovimientoMovil()}" />





			</h:form>
		</pm:content>
	</pm:page>
</f:view>



